<div class="row">
  <div class="col-auto">
    <h2 class="ms-3">Welcome, {{name}}!</h2>
  </div>
</div>

{{#if posts.length}}
  <div class="form-group">
    <a href="/create"><button type="button" class="btn btn-primary ms-5">Create
        Post</button></a>
  </div>
  <div class="container">
    <div class="row mt-4">
      <h3>{{name}}'s Posts:</h3>
      {{#each posts as |post|}}
        <div class="row mb-2 dashboard-posts align-items-center">
          <div class="col-md-8">
            <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
            <p>{{post_preview post.postBody}}</p>
          </div>
          <div class="col-md-4">
            <div class="row">
              <button
                class="btn btn-sm btn-warning m-1 edit-list"
                data-id="{{post.id}}"
                aria-label="edit"
              >EDIT</button>
              <button
                class="btn btn-sm btn-danger m-1 post-list"
                data-id="{{post.id}}"
                aria-label="delete"
              >DELETE</button>
            </div>
          </div>
        </div>
      {{/each}}
      <div class="col-md-6">

      </div>
    </div>
  </div>
{{else}}
  <div class="col-md-6 ms-3 mb-3">
    <h3>Create a New Post:</h3>
    <form class="form new-post-form">
      <div class="form-group m-2">
        <h4>Post Title:</h4>
        <label for="post-title"></label>
        <input
          class="form-input ms-4"
          type="text"
          id="post-title"
          name="post-title"
          style="width: 450px; height: 30px"
        />
      </div>
      <div class="form-group m-2 w-100">
        <h4>Post Body:</h4>
        <label for="post-body"></label>
        <textarea
          class="form-input ms-4"
          id="post-body"
          name="post-body"
          rows="10"
          cols="75"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary ms-4">Create</button>
      </div>
    </form>
  </div>
{{/if}}

<script src="./js/dashboard.js"></script>
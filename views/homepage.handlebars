<h1 class="m-3">Posts</h1>

{{!-- {{#if posts.length}}

  {{> post }} --}}

  {{!-- {{else}} --}}
  {{#each posts as |post| }}
    <div class="card mb-2">
      <div class="card-header">
        <h2>{{post.title}}</h2>
      </div>
      <div class="card-body">
        {{!-- <h5 class="card-title">Special title treatment</h5> --}}
        <p class="card-text">{{post.postBody}}</p>
        <a href="/posts/{{post.id}}" class="btn btn-primary">Read More</a>
      </div>
      <div class="card-footer text-body-secondary">
        By: {{post.user.name}}
        <span class="d-block">Date: {{post.dateCreated}}</span>
      </div>
    </div>
  {{/each}}

{{!-- {{/if}} --}}

